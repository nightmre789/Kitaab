@model Book

@{
    ViewData["Title"] = "Book details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Title
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.Cover" width="100%" alt="@Model.Title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Author: </b>
                            <a asp-controller="Authors" asp-action="Details" asp-route-id="@Model.AuthorId">
                                @Model.Author.FullName
                            </a>
                        </p>
                        <p class="card-text"><b>Category: </b>@Model.Category</p>
                        <p class="card-text ">
                            <b>Status: </b>
                            @if (Model.Quantity > 0)
                            {
                                <span class="badge bg-success text-white">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">Not Available</span>
                            }
                        </p>
                        <p class="card-text"><b>Price: </b>@Model.Price)</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                            <a class="btn btn-success text-white  @((Model.Quantity > 0) ? "" : "disabled")"
                               asp-controller="Orders"
                               asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c"))</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>